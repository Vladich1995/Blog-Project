<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="newTitle" autocomplete="off" required>
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="newPost"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-sm">Publish</button>
</form>
<%- include("partials/footer") -%>
